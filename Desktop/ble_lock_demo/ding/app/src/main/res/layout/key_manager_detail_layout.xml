<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/backgroundjiemian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/backgroundtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_gravity="center"
            android:text="钥匙信息"
            android:textSize="@dimen/title_bar"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/v_1"
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="名称"
            android:textSize="@dimen/top"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/key_lock"
            android:hint="请输入"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
         android:layout_centerVertical="true"
            android:text="有效时间"
            android:textSize="@dimen/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/key_time"
            android:hint="请输入"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/text_size_13"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/key_time"
            android:layout_alignParentRight="true"
            android:id="@+id/key_time_end"
            android:hint="请输入"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/text_size_13"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
<ImageView
    android:layout_marginLeft="3dp"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:background="@mipmap/more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="接收人账号"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/accept_name"
            android:text="永久"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="6dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="发送人"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/send_name"
            android:text="永久"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="6dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="发送时间"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/send_time"
            android:text="2018"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="6dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View

        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_jilu"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="操作记录"
            android:textSize="@dimen/top"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/key_lock_jilu"

            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button

        android:id="@+id/but_key_delect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/login"
        android:onClick="onclick"
        android:text="删除"
        android:textColor="#ffffff"
        android:textSize="@dimen/but_size" />
</LinearLayout>