    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="名称"
            android:textSize="@dimen/top"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/name_lock"
            android:hint="请输入"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#ede8e8"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="MAC"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/mac"
            android:text="C9;F0:29:97:7D"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:layout_weight="2"

            android:layout_width="6dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="有效期"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="永久"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:layout_weight="2"

            android:layout_width="6dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="电量"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lock_elect"
            android:text="100%"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="6dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ede8e8"

        android:layout_width="match_parent"
        android:layout_height="6dp"/>

    <LinearLayout
        android:id="@+id/ll_set_managerPasw"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="管理员开门密码"
            android:textSize="@dimen/top"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/set_keymanager"
            android:text="12345678"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/top"
            android:drawableRight="@mipmap/more"
            android:layout_weight="2"
            android:drawablePadding="5dp"
            android:layout_width="6dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_time_clock"
        android:layout_margin="10dp"
        android:drawableRight="@mipmap/more"
        android:text="时钟"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_factory_reset"
        android:layout_margin="10dp"
        android:drawableRight="@mipmap/more"
        android:text="恢复出厂设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_dfu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_margin="10dp"
        android:drawableRight="@mipmap/more"
        android:text="锁升级"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ede8e8"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
<Button
    android:onClick="butClick"
    android:textSize="16sp"
    android:textColor="#fff"
    android:background="#EE882D"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:text="删除"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</LinearLayout>