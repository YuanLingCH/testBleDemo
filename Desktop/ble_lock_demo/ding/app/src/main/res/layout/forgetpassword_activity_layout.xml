<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/backgroundjiemian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/backgroundtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_gravity="center"
            android:text="忘记密码"
            android:textSize="@dimen/title_bar"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/et_phone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请输入注册手机号码"
            android:textSize="@dimen/edit_text"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@drawable/login_shape"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_authcode"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="验证码"
                android:textSize="@dimen/edit_text"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:inputType="number"
                android:background="@drawable/login_shape"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/but_outhcode"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="获取验证码"
                android:textSize="@dimen/edit_text"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:background="@drawable/blue_5dp"
                android:layout_width="0dp"
                android:layout_height="45dp" />

        </LinearLayout>
        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/et_passWord"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请输入密码"
            android:textSize="@dimen/edit_text"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:background="@drawable/login_shape"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/et_repetition_password"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请再次输入密码"
            android:textSize="@dimen/edit_text"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:background="@drawable/login_shape"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:id="@+id/but_modifier_password"
            android:text="确定修改"
            android:textSize="@dimen/but_size"
            android:background="@drawable/blue_5dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>