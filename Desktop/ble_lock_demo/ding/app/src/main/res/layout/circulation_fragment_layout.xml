<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/backgroundjiemian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_marginTop="10dp"
        android:background="#e8e8e8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jiange_size"/>
    <LinearLayout
        android:layout_marginTop="15dp"
      android:id="@+id/ll_circulation"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/butTextSize"
            android:text="循环方式"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_circulation"
            android:textSize="14sp"
            android:gravity="right"
            android:hint="每日"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/more"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_time"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="生效时间"
            android:textSize="@dimen/butTextSize"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/electfrg_effect_time"
            android:background="@mipmap/input_box"
            android:hint="请输入时间"
            android:gravity="center"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lose_time"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="失效时间"
            android:textSize="@dimen/butTextSize"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/electfrg_lose_time"
            android:background="@mipmap/input_box"
            android:hint="请输入时间"
            android:gravity="center"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#e8e8e8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jiange_size"/>
    <TextView
        android:textColor="#000"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textSize="@dimen/butTextSize"
        android:text=""
        android:gravity="center"
        android:background="#e8e8e8"
        android:id="@+id/tv_pasw"
        android:layout_width="120dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/create_pasrord"
        android:textColor="#ffffff"
        android:background="@mipmap/login"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:text="生成密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>