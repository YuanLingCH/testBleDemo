<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/open_clock_5dp"
    android:layout_height="match_parent">
    <TextView
        android:textSize="15sp"
        android:id="@+id/tv"
        android:gravity="center"
        android:text="确定删除"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/dialog_editname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_yanzhenpasw"
        android:layout_margin="@dimen/space_10"
        android:layout_below="@+id/dialog_editname"
        android:textSize="15sp"
        android:background="@drawable/login_shape"
        android:hint="请输入你的账号密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_below="@+id/et_yanzhenpasw"
        android:background="@color/text_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_below="@+id/et_yanzhenpasw"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:id="@+id/add_cancle"
        android:textSize="15sp"

        android:layout_below="@+id/et_yanzhenpasw"
        android:text="取消"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/tv"
            android:layout_width="1dp"
            android:layout_centerInParent="true"
            android:background="@color/text_gray"
            android:layout_height="50dp"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/add_submit"
        android:textColor="@color/weishengxiao_"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_yanzhenpasw"
        android:text="确定"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>