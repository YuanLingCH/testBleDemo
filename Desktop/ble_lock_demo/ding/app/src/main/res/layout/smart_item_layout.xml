<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <CheckBox
        android:layout_centerVertical="true"
        android:id="@+id/check_item"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_toRightOf="@+id/check_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:id="@+id/biaohao"
            android:layout_marginLeft="10dp"

            android:text="20170809"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#EC8325"
            android:gravity="center"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:text="授权"

            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:gravity="center"
            android:text="限时"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:textColor="#000"
        android:layout_below="@+id/ll"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/check_item"
        android:id="@+id/date"
        android:text="2018.03.08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000"
        android:layout_below="@+id/ll"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/date"
        android:id="@+id/time"
        android:text="16:30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000"
        android:layout_below="@+id/ll"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/time"
        android:id="@+id/pp"
        android:text="—"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000"
        android:layout_below="@+id/ll"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/pp"
        android:id="@+id/date_l"
        android:text="2018.03.08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000"
        android:layout_below="@+id/ll"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/date_l"
        android:id="@+id/time_l"
        android:text="16:30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>